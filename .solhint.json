{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "avoid-throw": "error",
    "avoid-tx-origin": "error",
    "check-send-result": "error",
    "compiler-version": ["error", "0.8.23"],
    "constructor-syntax": "error",
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "not-rely-on-block-hash": "error",
    "not-rely-on-time": "warn",
    "reentrancy": "error",
    "state-visibility": "error",
    "no-empty-blocks": "error",
    "no-unused-vars": "error",
    "payable-fallback": "error",
    "reason-string": ["warn", { "maxLength": 64 }],
    "no-console": "error",
    "func-name-mixedcase": "error",
    "func-param-name-mixedcase": "error",
    "modifier-name-mixedcase": "error",
    "private-vars-leading-underscore": ["error", { "strict": false }],
    "var-name-mixedcase": "error",
    "imports-on-top": "error",
    "ordering": "warn",
    "visibility-modifier-order": "error",
    "avoid-low-level-calls": "warn",
    "no-inline-assembly": "off",
    "function-max-lines": ["warn", 100],
    "code-complexity": ["warn", 7],
    "max-line-length": ["error", 120],
    "max-states-count": ["warn", 15],
    "no-unused-import": "error",
    "const-name-snakecase": "error",
    "gas-custom-errors": "off",
    "foundry-test-functions": "off",
    "named-parameters-mapping": "warn",
    "immutable-vars-naming": ["error", { "immutablesAsConstants": false }],
    "avoid-call-value": "error",
    "quotes": ["error", "double"],
    "one-contract-per-file": "warn",
    "explicit-types": ["warn", "explicit"],
    "no-global-import": "warn",
    "use-natspec": "off",
    "gas-increment-by-one": "off",
    "gas-indexed-events": "off"
  }
}